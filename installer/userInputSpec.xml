<izpack:userinput version="5.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="http://izpack.org/schema/userinput" xsi:schemaLocation="http://izpack.org/schema/userinput http://izpack.org/schema/5.0/izpack-userinput-5.0.xsd">
  <panel id="mypanel">
    <field type="staticText" align="left" txt="Put your Public IP here if you want to host a visible and public node" id="input.comment" />
    <field type="text" variable="ipaddr">
      <spec txt="Your IPv4 Address" size="25" set="" />
    </field>
    

    <field type="password" variable="pwd">
      <spec>
        <pwd txt="Your password" size="30" set="" />
      </spec>
    </field>
  </panel>
</izpack:userinput>
